include ../template.jade
include ../../shared/header/index.jade
include ../../shared/footer/index.jade

+template
  +header
    include ../nav.jade
    a(href="/dashboard", target="_self")
      img.img-circle(width="40", src="#{asset_path}/home/assets/profile.png")

  section.content
    .fluid-container
      .row
        .col-xs-12(style="text-align:center")
          img(src="#{asset_path}/home/assets/dash.png")
      .row(style="position:absolute;top:30px;width:100%;")
        .col-xs-12(style="text-align:center")
          a(href="/dashboard", style="display:inline-block;position:relative;z-index:100;")
            img(src="#{asset_path}/home/assets/modal.png")
  +footer
  div.modal-overlay(style="position: fixed;left: 0;top: 0;height: 100%;width: 100%;background-color: rgba(0,0,0,0.68);z-index: 1;")
